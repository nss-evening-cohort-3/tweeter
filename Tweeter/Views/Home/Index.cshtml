@model Tweeter.Models.TweetViewModel
@{
    ViewBag.Title = "Home Page";
}

@if (User.Identity.IsAuthenticated)
{

    <div id="homeIndex" ng-controller="HomeCtrl">
        <div style="margin-top:50px">
            <div class="col-md-3" style="border:1px solid lightgrey" id="prof_box">
                <img src="https://upload.wikimedia.org/wikipedia/en/b/b1/Portrait_placeholder.png" />
                <p>Username:</p>
                <p>Followers:</p>
            </div>
        </div>
        <div class="col-md-6 col-md-offset-2">
            <div id="compose">
                <form action="api/Tweet/Post" method="POST">
                    @Html.TextBoxFor(m => m.Message, new { placeholder = "Compose", @class = "new_tweet_input" })
                    <button class="btn btn-primary btn-sm" type="submit">+</button>
                </form>
            </div>
        </div>
        <div class="col-md-4 col-md-offset-1" style="border:2px solid black"  ng-repeat="tweet in tweets">
            <div class="all_tweets">
                
                <p>{{tweet.message}}</p>
                <div style="border:1px solid lightgrey">
                    <button class="glyphicon glyphicon-retweet"></button>
                    <button class="glyphicon glyphicon-share-alt"></button>
                </div>
            </div>
        </div>
        <div class="col-lg-3" style="border:1px solid lightgrey" id="todays_twits">
            <h2>Today's Twits</h2>
            <p>Lorem Ipsum Veritae Veritus Nomine Ipso Facto Blah Blah Blah Blah Blah</p>
        </div>

        <div class="col-lg-4 col-md-offset-1" style="border:1px solid lightgrey" id="more_tweets">
            <button class="glyphicon glyphicon-chevron-down"></button>
        </div>
    </div>
}
else
{
    <div class="jumbotron">
        <p class="col-lg-2 col-lg-offset-5"><a href="http://asp.net" class="btn btn-primary btn-lg">JOIN &raquo;</a></p>
    </div>
}
