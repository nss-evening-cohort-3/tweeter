@{
    ViewBag.Title = "Home Page";
}
@if (User.Identity.IsAuthenticated)
{
    <div class="container">
  
                <div class="row">
                    <div class="text-center">
                        <input class="composer" id="compose_tweet" type="text" placeholder="Compose Tweet">
                        <button id="submit_tweet" class="btn">Submit</button>
                    </div>
                </div>
            
            <div class="col-xs-4 panel panel-default">
                <div class="row">
                    <div class="text-center">
                        <img class="user-image" src="https://pbs.twimg.com/profile_images/642711243007000576/jAwd5TGK_400x400.jpg" />
                    </div>
                    <div class="row">
                        <p class="text-center">@User.Identity.Name</p>
                    </div>
                    <div class="row">
                        <p class="text-center">Followers:</p>
                    </div>
                </div>
            </div>
            
                <div class="panel panel-default">
                    <h3 class="text-center">Trending Twits</h3>
                </div>
                
            <div id="tweetTarget">

            </div>
        </div>
   
}
else
{
    <div class="jumbotron">
        <a href="/Account/Register">
            <button class="btn btn-default col-xs-2 col-sm-offset-4">Join us!</button>
        </a>
    </div>
}