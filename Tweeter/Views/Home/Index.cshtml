@{
    ViewBag.Title = "Home Page";
}
@using Microsoft.AspNet.Identity
@if (!Request.IsAuthenticated)
{
<div class="jumbotron text-center">
    <a href="#" class="btn btn-primary btn-lg center-block">Join!</a>
</div>

<div class="text-center container">
    <button class="btn-primary btn col-lg-4 col-lg-offset-4">
        <span class="col-lg-10">Compose</span>
        <span class="col-lg-2">
            <span class="glyphicon glyphicon-plus"></span>
        </span>
    </button>
</div>

<div class="tweets__container container">
    <div class="col-lg-6 col-lg-offset-3 tweets__tweet--image">
        <div class="col-lg-12 placeholder-tweet-image-container-class"><img class="tweet__image" src="~/Content/Images/placeholder.png" /></div>
        <div class="col-lg-12 placeholder-tweet-message-container-class">
            <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Etiam in viverra libero, eget tincidunt lectus. Fusce at vestibulum risus. Pellentesque.</p>
        </div>
        <hr />
        <div class="placeholder-tweet-bottom-action-row col-lg-12">
            <div class="row text-center">
                <div class="col-lg-3 col-md-3"><span class="glyphicon glyphicon-heart"></span></div>
                <div class="col-lg-3 col-md-3"><span class="glyphicon glyphicon-pencil"></span></div>
                <div class="col-lg-3 col-md-3"><span class="glyphicon glyphicon-plus"></span></div>
                <div class="col-lg-3 col-md-3"><span class="glyphicon glyphicon-plus"></span></div>
            </div>
        </div>
    </div>
</div>
}
else
{
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <div class="row">
                    <div class="text-center col-md-12 user__profile__card--upper">
                        <img src="~/Content/Images/anon-lady.png" />
                    </div>
                    <div class="col-md-12 text-left user__profile__card--bottom">
                        <h3>SampleWoman123</h3>
                        <p>203 Followers</p>
                    </div>
                    <br />
                    <div class="col-md-12 user__tweet__box">
                        Here's a box with trending tweets or something inside of it.
                    </div>
                </div>
            </div>
            <div class="col-md-9">
                <div class="text-center container">
                    <button class="btn-primary btn col-md-8 col-md-offset-3">
                        <span class="col-md-10">Compose</span>
                        <span class="col-md-2">
                            <span class="glyphicon glyphicon-plus"></span>
                        </span>
                    </button>
                </div>

                <div class="tweets__container container">
                    <div class="col-md-10 col-md-offset-2 tweets__tweet--image">
                        <div class="col-md-12 placeholder-tweet-image-container-class"><img class="tweet__image" src="~/Content/Images/placeholder.png" /></div>
                        <div class="col-md-12 placeholder-tweet-message-container-class">
                            <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Etiam in viverra libero, eget tincidunt lectus. Fusce at vestibulum risus. Pellentesque.</p>
                        </div>
                        <hr />
                        <div class="placeholder-tweet-bottom-action-row col-md-12">
                            <div class="row text-center">
                                <div class="col-md-3"><span class="glyphicon glyphicon-heart"></span></div>
                                <div class="col-md-3"><span class="glyphicon glyphicon-pencil"></span></div>
                                <div class="col-md-3"><span class="glyphicon glyphicon-plus"></span></div>
                                <div class="col-md-3"><span class="glyphicon glyphicon-plus"></span></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}